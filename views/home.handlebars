{{!-- {{#if blogs}} --}}
<div class="container">
  {{#if message }}
  <div class="mt-5 alert alert-warning alert-dismissible fade show" role="alert">
    {{message}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  {{/if}}

  <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
    <h1>All Blogs</h1>
    <a href="/create" class="btn btn-primary">+ Add Blog</a>
  </div>

  <div class="row">
    {{#if blogs}}
    {{#each blogs}}
    <div class="col-12 col-md-4">
      <div class="card mb-3 shadow-sm border-0">
        <div class="card-body">
          <div class="d-flex justify-content-between mb-2">
            <div>
              <h4 class="card-title mb-0">{{title}}</h4>
              <h6 class="m-0 text-muted">{{author}}</h6>
            </div>
            <div>
              <a href="blog/{{id}}" class="btn btn-sm btn-primary rounded-circle me-1">
                  <i class="fa fa-eye"></i>
                </a>
              <a href="blog/update/{{id}}" class="btn btn-sm btn-warning rounded-circle me-1">
                  <i class="fa fa-pencil"></i>
                </a>
                <a href="blog/delete/{{id}}" class="btn btn-sm btn-danger rounded-circle">
                  <i class="fa fa-trash"></i>
                </a>
            </div>
          </div>
          <p class="card-text">
            <small class="text-muted">Created: {{createdAt}} - Updated: {{updatedAt}}</small>
          </p>
        </div>
      </div>
    </div>
    {{/each}}
    {{else}}
    <h5>No data found!</h5>
    {{/if}}
  </div>
</div>

{{!-- {{else}} --}}
